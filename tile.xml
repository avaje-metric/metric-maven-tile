<?xml version="1.0" encoding="UTF-8"?>
<project>

  <properties>
    <metric-maven-plugin.version>7.2.1</metric-maven-plugin.version>
  </properties>

  <build>
    <plugins>

      <plugin>
        <groupId>org.avaje.metric</groupId>
        <artifactId>enhance-maven-plugin</artifactId>
        <version>${metric-maven-plugin.version}</version>
        <executions>
          <execution>
            <id>main</id>
            <phase>process-classes</phase>
            <goals>
              <goal>enhance</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>

  </build>

</project>
